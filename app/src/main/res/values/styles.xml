        <!--<item name="minWidth">50dp</item>-->
        <item name="layout_constrainedWidth">true</item>
        <item name="android:textColor">@color/product_text_color</item>
        <item name="android:background">@drawable/product_other_background</item>

        <!--<item name="android:layout_marginStart">@dimen/margin_between_horizontal</item>
