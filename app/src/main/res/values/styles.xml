    <dimen name="margin_top">6dp</dimen>

    <dimen name="product_bubble_padding">0dp</dimen>
    <dimen name="product_bubble_padding_horizontal">7dp</dimen>
    <dimen name="product_bubble_padding_vertical">0dp</dimen>
    <dimen name="product_bubble_padding_left">@dimen/product_bubble_padding_horizontal</dimen>
    <dimen name="product_bubble_padding_right">@dimen/product_bubble_padding_horizontal</dimen>
    <dimen name="product_bubble_padding_top">@dimen/product_bubble_padding_vertical</dimen>
